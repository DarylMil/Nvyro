<div class="container-sm w-75 shadow mx-auto rounded">
    <form class= "mt-3" method="post" enctype="multipart/form-data" >
        <div style="background-color: #f33f3f" class="mb-3 rounded-top">
            <h5 class="text-white p-3">Create a recycling collection event</h2>
        </div>
        <input class="form-control" asp-for="MyEvent.UserId" hidden />

        <div id="addEventPage1">
            <div class="row mx-3 mb-3">
                <div class="col-3">
        <label class="form-label pt-2">Event Poster: </label>
                </div>
                <div class="col-6">
                    <div class="mb-3">
                        <input type="file" accept="image/*" asp-for="Upload" class="" onchange="showImgPreview(this)" id="formFile" />
                        <span asp-validation-for="Upload" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-3">
                    <img id="imgPreview" class="" style="height:150px;width:150px;object-fit:cover" src="/assets/EventImage/event.png" />
                </div>
            </div>

            <div class="row mx-3 mb-3">
            <label class="col-sm-3 form-label pt-2">Event title: </label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="MyEvent.EventTitle" id="eventTitle"/>
                    <span asp-validation-for="MyEvent.EventTitle" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3 mx-3">
                <label class="col-sm-3 form-label pt-2">Event category: </label>
                <div class="col-sm-9">
                    @Html.DropDownListFor(e => e.MyEvent.Categories, new SelectList(AddModel.CategoryList, "CategoryId", "CategoryName"), "-- Select a category--", new {@class = "form-control"})
                    <span asp-validation-for="MyEvent.Categories" class="text-danger"clas></span>
                </div>
            </div>

            <div class="row mx-3 mb-3">
            <label class="col-sm-3 form-label pt-2">Event description: </label>
                <div class="col-sm-9">
                    <textarea class="form-control" asp-for="MyEvent.Description" rows="3" id="eventDesc"></textarea>
                    <span asp-validation-for="MyEvent.Description" class="text-danger"></span>
                </div>
            </div>
            </div>

        <div id="addEventPage2" class="@*d-none*@">
            <div class="row mb-3 mx-3">
                <label class="col-sm-3 form-label pt-2">Event date(s): </label>
                <div class="col-sm-4">
                    <input class="form-control" asp-for="MyEvent.StartDate" />
                    <span asp-validation-for="MyEvent.StartDate" class="text-danger"></span>
                </div>
                <p class="col-1 text-center font-weight-normal pt-2">To</p>
                <div class="col-sm-4">
                    <input class="form-control" asp-for="MyEvent.EndDate" />
                    <span asp-validation-for="MyEvent.EndDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3 mx-3">
                <label class="col-sm-3 form-label pt-2" >Event timing: </label>
                <div class="col-sm-4">
                    <input class="form-control" asp-for="MyEvent.StartTime" />
                    <span asp-validation-for="MyEvent.StartTime" class="text-danger"></span>
                </div>
                <p class="col-1 text-center font-weight-normal pt-2">To</p>                     
                <div class="col-sm-4">
                    <input class="form-control" asp-for="MyEvent.EndTime" />
                    <span asp-validation-for="MyEvent.EndTime" class="text-danger"></span>
                </div>

            </div>

            <div class="row mb-3 mx-3">
                <label class="col-sm-3 form-label pt-2">Search start address</label>
                <div class="col-sm-9">
                    <div class="input-group">
                        <span class="input-group-text" style="border-right:0;background:white;border-radius:.25rem 0 0 .25rem;"><i class="fa-solid fa-magnifying-glass"></i></span>
                        <input id="search-start-full-address" style="border-left:0;" class="form-control" aria-required="true" placeholder="Search for start address" />
                    </div>
                </div>
                <div id="select-start-address" class="show">
                </div>
            </div>

            <div class="row mb-3 mx-3">
                <div class="col-7 d-none" id="start-roadname">
                    <input asp-for="MyEvent.StartRoadName" class="form-control" aria-required="true" />
                    <span asp-validation-for="MyEvent.StartRoadName" class="text-danger"></span>
                </div>
                <div class="col d-none" id="start-block">
                    <input asp-for="MyEvent.StartBlockNumber" class="form-control" aria-required="true" />
                    <span asp-validation-for="MyEvent.StartBlockNumber" class="text-danger"></span>
                </div>
                <div class="col d-none" id="start-postal">
                    <input asp-for="MyEvent.StartPostalCode" class="form-control" aria-required="true" />
                    <span asp-validation-for="MyEvent.StartPostalCode" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3 mx-3">
                <label class="col-sm-3 form-label pt-2">Search end address</label>
                <div class="col-sm-9">
                    <div class="input-group">
                        <span class="input-group-text" style="border-right:0;background:white;border-radius:.25rem 0 0 .25rem;"><i class="fa-solid fa-magnifying-glass"></i></span>
                        <input id="search-end-full-address" style="border-left:0;" class="form-control" aria-required="true" placeholder="Search for end address" />
                    </div>
                </div>
                <div id="select-end-address" class="show">
                </div>
            </div>

            <div class="row mb-3 mx-3">
                <div class="col-sm-7 d-none" id="end-roadname">
                    <input asp-for="MyEvent.EndRoadName" class="form-control" aria-required="true" />
                    <span asp-validation-for="MyEvent.EndRoadName" class="text-danger"></span>
                </div>
                <div class="col-sm d-none" id="end-block">
                    <input asp-for="MyEvent.EndBlockNumber" class="form-control" aria-required="true" />
                    <span asp-validation-for="MyEvent.EndBlockNumber" class="text-danger"></span>
                </div>
                <div class="col-sm d-none" id="end-postal">
                    <input asp-for="MyEvent.EndPostalCode" class="form-control" aria-required="true" />
                    <span asp-validation-for="MyEvent.EndPostalCode" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="mb-3 mr-4 d-flex justify-content-end">
            <a class="btn btn-danger  col-2 mr-2 mb-3" href="/OrganizerEvent/Index">Cancel</a>
            <input type="submit" value="Add" class="btn btn-primary col-2 mb-3" />
        </div>
    </form>
</div>

<script>
    function showImgPreview(input) {
        if (input.files[0]) {
            var uploadimg = new FileReader();
            uploadimg.onload = function(displayimg) {
                $("#imgPreview").attr('src', displayimg.target.result);
            }
            uploadimg.readAsDataURL(input.files[0]);
        }
    }


</script>

