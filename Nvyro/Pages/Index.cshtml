@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link rel="stylesheet" href="~/css/Eventadd.css" />

    <div class="latest-products">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="section-heading">
              <h2>All Events</h2>
          @*    <a href="products.html">view all products <i class="fa fa-angle-right"></i></a>*@
            </div>
          </div>


        @{
                    @if (Model.EventList.Count() == 0)
                {
                        <div class="mx-auto">
                            <h5>There is no events currently</h5>
                        </div>
                }

                else {
                        <div class="row">
                            @foreach (var item in Model.EventList)
                        {

                                <div class="col">
                                    <div class="card shadow" style="min-width: 100%;">
                                        <h5 class="card-header">Featured</h5>
                                        <img id="imgPreview" class="card-img-top mx-auto" style="height:150px;width:100px;object-fit:cover"
                                     src="@(string.IsNullOrEmpty(item.ImageURL) ? "/assets/EventImage/event.png" : item.ImageURL)"
                                     onerror="this.src='/assets/EventImage/event.png'" />

                                        <div class="card-body">
                                            <h5 class="card-title">@item.EventTitle</h5>

                                            <div class="row">
                                                <p class="col"><i class="fa fa-calendar fa-lg center" aria-hidden="true" style="color: #f33f3f"></i></p>
                                                <p class="card-text col-9">@item.StartDate.ToShortDateString() <span class="font-weight-bold">to</span> @item.EndDate.ToShortDateString()</p>
                                            </div>

                                            <div class="row">
                                                <p class="col"><i class="fa fa-clock-o fa-lg center" aria-hidden="true" style="color: #f33f3f"></i></p>
                                                <p class="card-text col-9">@item.StartTime <span class="font-weight-bold">to</span> @item.EndTime</p>
                                            </div>
                                            <div class="row">
                                                <p class="col"><i class="fa fa-map-marker fa-lg center" aria-hidden="true" style="color: #f33f3f"></i></p>
                                                <p class="col-9 card-text">@item.StartBlockNumber @item.StartRoadName <span class="font-weight-bold">to</span>  <br>@item.EndBlockNumber @item.EndRoadName</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        }
                        </div>
                }
        }         
        </div>
      </div>
    </div>

    

    <div class="call-to-action">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="inner-content">
              <div class="row">
                <div class="col-md-8">
                  <h4>Creative &amp; Unique <em>Sixteen</em> Products</h4>
                  <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Itaque corporis amet elite author nulla.</p>
                </div>
                <div class="col-md-4">
                  <a href="#" class="filled-button">Purchase Now</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="js/owl.js"></script>