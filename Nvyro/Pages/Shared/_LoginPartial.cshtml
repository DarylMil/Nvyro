@using Microsoft.AspNetCore.Identity
@using Nvyro.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    @if (User.IsInRole("Admin"))
        {
        <li class="nav-item">
        <a id="manage" class="nav-link" asp-page="/Admin/Dashboard" title="Profile">Hello @(user !=null ? @user.FullName:""!)</a>
        </li>
        }
    else
        {
         <li class="nav-item">
        <a id="manage" class="nav-link" asp-page="/User/UserDashboard" title="Profile">Hello @(user !=null ? @user.FullName:""!)</a>
        </li>   
        }
    <li class="nav-item">
        @*<form id="logoutForm" class="form-inline" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">*@
            <a id="logout" class="nav-link" style="color:white;" href="/api/user/">Logout</a>
        @*</form>*@
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" id="register" asp-page="/User/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="login" asp-page="/User/Login">Login</a>
    </li>
}
</ul>
