@page
@model Nvyro.Pages.Forum.ForumEditModel
@{
    ViewData["Title"] = "Edit Post";
}

<h1 class="fw-bold text-center py-4 px-2">@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="Title">Post Title</label>
        <input asp-for="Post.Title" type="text" class="form-control" id="Title" placeholder="Insert Title" //*value="@Model.Post.Title"* >
        <span asp-validation-for="Post.Title" class="text-danger"></span>
    </div>
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector: '#mytextarea',
            plugins: [
                'a11ychecker', 'advlist', 'advcode', 'advtable', 'autolink', 'checklist', 'export',
                'lists', 'link', 'image', 'charmap', 'preview', 'anchor', 'searchreplace', 'visualblocks',
                'powerpaste', 'fullscreen', 'formatpainter', 'insertdatetime', 'media', 'table', 'help', 'wordcount'
            ],
            toolbar: 'undo redo | formatpainter casechange blocks | bold italic backcolor | ' +
                'alignleft aligncenter alignright alignjustify | ' +
                'bullist numlist checklist outdent indent | removeformat | a11ycheck code table help'
        });
    </script>
    <textarea asp-for="Post.Description" id="mytextarea" placeholder="Insert Description" //*value="@Model.Post.Description"*></textarea>
    <span asp-validation-for="Post.Description" class="text-danger"></span>

    <style>
        .btn {
            margin-right: 10px;
        }
    </style>
    <button type="submit" class="btn btn-primary mt-3 pull-right">Submit</button>
    <a class="btn btn-secondary mt-3 pull-right" href="/Forum/ForuMain">Cancel</a>
</form>